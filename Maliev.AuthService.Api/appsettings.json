{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "RateLimit": {
    "TokenEndpoint": {
      "PermitLimit": 10,
      "Window": "00:01:00",
      "QueueLimit": 5
    },
    "RefreshEndpoint": {
      "PermitLimit": 20,
      "Window": "00:01:00",
      "QueueLimit": 10
    },
    "Global": {
      "PermitLimit": 100,
      "Window": "00:01:00",
      "QueueLimit": 20
    }
  },
  "Cache": {
    "ValidationCache": {
      "Enabled": true,
      "ExpirationTime": "00:05:00",
      "SlidingExpirationTime": "00:02:00",
      "MaxCacheSize": 1000
    }
  }
}
